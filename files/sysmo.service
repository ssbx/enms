[Unit]
Description=Sysmo Core server daemon
After=network.target remote-fs.target nss-lookup.target

[Service]
ExecStart=/usr/lib64/sysmo-nms/bin/sysmo_service start
ExecReload=/usr/lib64/sysmo-nms/bin/sysmo_service restart
ExecStop=/usr/lib64/sysmo-nms/bin/sysmo_service stop
User=sysmo-nms

# Type=notify
# TimeoutStopSec=42s
# TimeoutRestartSec=42s
# KillSignal=SIGCONT

[Install]
WantedBy=multi-user.target
