%% -*- mode: erlang -*-
%% ex: ft=erlang
{sys, [
       {lib_dirs, [".."]},
       {erts, [{mod_cond, derived}, {app_file, strip}]},
       {app_file, strip},
       {rel, "sysmo", "1.1.0", [kernel, stdlib, sasl, sysmo]},
       {rel, "start_clean", "", [kernel, stdlib]},
       {boot_rel, "sysmo"},
       {profile, embedded},
       {incl_cond, exclude}, % default is "derived" changed to only include needed apps (without wx)
       {excl_archive_filters, [".*"]}, %% Do not archive built libs
       {excl_sys_filters, ["^bin/(?!start_clean.boot)",
                           "^erts.*/bin/(dialyzer|typer)",
                           "^erts.*/(doc|info|include|lib|man|src)"]},
       {excl_app_filters, ["\.gitignore"]},
       % BEGIN because {incl_cond, exclude} exclude all apps
       % include them explicitly
       {app, asn1, [{incl_cond, include}]},
       {app, crypto, [{incl_cond, include}]},
       {app, kernel, [{incl_cond, include}]},
       {app, mnesia, [{incl_cond, include}]},
       {app, public_key, [{incl_cond, include}]},
       {app, sasl, [{incl_cond, include}]},
       {app, ssl, [{incl_cond, include}]},
       {app, stdlib, [{incl_cond, include}]},
       {app, xmerl, [{incl_cond, include}]},
       % INFO these are included if default incl_cond is "derived"
       % From sysmo.rel file generated by reltool
       % {compiler, "X.X", load},
       % {et, "X.X", load},
       % {eunit, "X.X", load},
       % {inets, "X.X", load},
       % {observer, "X.X", load},
       % {runtime_tools, "X.X", load},
       % {tools, "X.X", load},
       % {webtool, "X.X", load},
       % {wx, "X.X", load}
       % END
       {app, sysmo, [{mod_cond, app}, {incl_cond, include},
                     {lib_dir, ".."}]},
       {app, monitor, [{mod_cond, app}, {incl_cond, include},
                     {lib_dir, "../deps/monitor"}]},
       {app, j_server, [{mod_cond, app}, {incl_cond, include},
                     {lib_dir, "../deps/j_server"}]},
       {app, supercast, [{mod_cond, app}, {incl_cond, include},
                     {lib_dir, "../deps/supercast"}]}
      ]}.

{target_dir, "sysmo"}.

{overlay, [
           % myfiles begin
           {mkdir, "docroot"},
           {mkdir, "docroot/sync"},
           {mkdir, "data"},
           {mkdir, "data/monitor"},
           {mkdir, "data/events"},
           {mkdir, "data/states"},
           {mkdir, "etc"},
           {mkdir, "etc/ssl"},
           {copy, "files/users.xml", "etc/users.xml"},
           {copy, "files/ssl/gen_certificates", "etc/ssl/gen_certificates"},

           % java server
           {mkdir, "java_apps"},
           {copy, "../deps/j_server/priv/jserver/sysmo-jserver/build/install/sysmo-jserver",
                "java_apps/sysmo-jserver"},
           {copy, "../deps/j_server/priv/jserver/sysmo-jserver/sysmo.properties",
                "etc/sysmo.properties"},

           % nchecks definitions
           {copy, "../deps/j_server/priv/jserver/shared/nchecks/nchecks-def", "docroot/nchecks"},
           {copy, "../deps/j_server/priv/jserver/shared/nchecks/nchecks-def", "etc/nchecks"},

           % nchecks jruby scripts
           {mkdir, "ruby"},
           {copy, "../deps/j_server/priv/jserver/shared/nchecks/ruby/*.rb", "ruby"},

           {mkdir, "utils"},
           % portable ping is installed with the rakefile

           {mkdir, "log/sasl"},
           {copy, "files/erl", "\{\{erts_vsn\}\}/bin/erl"},
           {copy, "files/nodetool", "releases/\{\{rel_vsn\}\}/nodetool"},
           {copy, "sysmo/bin/start_clean.boot",
                  "\{\{erts_vsn\}\}/bin/start_clean.boot"},
           {copy, "files/sysmo", "bin/sysmo"},
           {copy, "files/sysmo.cmd", "bin/sysmo.cmd"},
           {copy, "files/start_erl.cmd", "bin/start_erl.cmd"},
           %% Following line may be safely removed in new projects
           {copy, "files/install_upgrade.escript", "bin/install_upgrade.escript"},
           {copy, "files/sys.config", "etc/app.config"},
           {copy, "files/vm.args", "etc/vm.args"}
          ]}.
