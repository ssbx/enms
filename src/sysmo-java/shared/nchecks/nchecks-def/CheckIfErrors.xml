<NChecks xmlns="http://schemas.sysmo.io/2015/NChecks">
    <Check
        Id="CheckIfErrors"
        Version="1.0"
        Class="io.sysmo.nchecks.modules.CheckIfErrors">

        <Author><![CDATA[Sebastien Serre (ssbx@sysmo.io)]]></Author>
        <AuthorUrl>http://www.sysmo.io</AuthorUrl>
        <UpdatesUrl>http://www.sysmo.io/nchecks/updates/CheckIfErrors/</UpdatesUrl>

        <Description>CheckIfErrors raise a CRITICAL or WARNING alert if interfaces errors exceed thresholds.</Description>
        <Overview> </Overview>

        <Require Ressource="snmp" />

        <FlagTable>
            <Flag Id="if_selection">
                <Hint>A comma separated list of interfaces indexes.</Hint>
                <Usage>Comma separated list of integers representing snmp interface indexes</Usage>
                <Helper Descr="Select from if table"
                    Class="io.sysmo.nchecks.helpers.GetIfTableHelper" />
            </Flag>
            <Flag Id="warning_threshold">
                <Hint>Integer representing an average number of error per minute.</Hint>
                <Usage>Set the probe to WARNING state if one interface has more thant "errors_warning" errors per minute rate</Usage>
                <Default>0</Default>
            </Flag>
            <Flag Id="critical_threshold">
                <Hint>Integer representing an average number of error per minute.</Hint>
                <Usage>Set the probe to CRITICAL state if one interface has more thant "errors_warning" errors per minute rate</Usage>
                <Default>100</Default>
            </Flag>
        </FlagTable>


        <Performances Type="table">

            <FlagSource Name="if_selection"/>
            <FlagSeparator>,</FlagSeparator>

            <FilePrefix>ifIndex</FilePrefix>
            <FileSuffix>.rrd</FileSuffix>


            <!-- PropertyPrefix PropertySuffix
            if present, the client will take the
            ${prefix="ifIndex"}${"if_selection[x]"}${suffix=""} from the target -->
            <PropertyPrefix>ifIndex</PropertyPrefix>
            <PropertySuffix>-ifName</PropertySuffix>


            <DataSourceTable>
                <DataSource Id="IfInErrors"       Type="COUNTER" />
                <DataSource Id="IfOutErrors"      Type="COUNTER" />
            </DataSourceTable>
            <GraphTable>
                <Graph
                    Id="ErrorsInOut"
                    Rigid="false"
                    Base="1000"
                    Unit=""
                    UnitExponent="" >
                    <Title>Errors In/Out</Title>
                    <VerticalLabel>Errors/Second</VerticalLabel>
                    <Draw
                        Type="area"
                        DataSource="IfInErrors"
                        Consolidation="MAX"
                        Color="#cc0000ff" >
                        Errors in
                    </Draw>
                     <Draw
                        Type="stack"
                        DataSource="IfOutErrors"
                        Calculation="0,IfOutErrors,-"
                        Consolidation="MAX"
                        Color="#fce94fff" >
                        Errors out
                    </Draw>
                </Graph>
            </GraphTable>
        </Performances>
    </Check>
</NChecks>
