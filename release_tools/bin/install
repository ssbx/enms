#!/bin/sh

ROOT=`pwd`
VARDIR=${ROOT}/var
CFGDIR=${ROOT}/cfg

DIR=./erts-5.10.3/bin
SYSDIR=./releases/0.2.1
RRDTOOL_PATH=/usr/bin/rrdtool

sed s:%FINAL_ROOTDIR%:$ROOT: $DIR/erl.src > $DIR/erl


cat $SYSDIR/sys.config.src              |   \
    sed s:%VAR_DIR%:$VARDIR:            |   \
    sed s:%CONFIG_DIR%:$CFGDIR:         |   \
    sed s:%RRDTOOL_PATH%:$RRDTOOL_PATH:     \
> $SYSDIR/sys.config
